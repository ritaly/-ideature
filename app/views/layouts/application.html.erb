<!DOCTYPE html>
<html>
  <head>
    <title>ImageApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <body>
    <nav class="navbar navbar-expand-lg navbar-dark static-top">
      <div class="container">
        <%= link_to 'Ideature', root_url, class: "navbar-brand" %>

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
          <ul class="navbar-nav ml-auto">
            <% if current_user %>
              <li class="nav-item">
                <%= link_to 'Add new', new_idea_url, class: "nav-link" %>
              </li>
              <%= link_to 'Logout', destroy_user_session_path, method: :delete, confirm: 'Are you sure?', class: "nav-link" %>
            <% else %>
            <li>
              <%= link_to 'Login', new_user_session_path, class: "nav-link" %>
            </li>
            <li>
              <%= link_to 'Register', new_user_registration_path, class: "nav-link" %>
            </li>
            <% end %>
            
          </ul>
        </div>
      </div>
    </nav>
    <header >
      <div>
        <h1>Ideature</h1>
        <div class='tagline'>Photo idea app for people who want more.</div>
      </div>
    </header>
    <main class="container">
      <div class="row">
        <div class="col-lg-12">
          <!-- wyswietlanie komunikatu -->
          <% flash.each do |info, message| %>
            <div class='alert alert-info'><%= message %></div>
          <% end %>

          <%= yield %>
        </div>
      </div>
    </main>
  </body>
</html>
