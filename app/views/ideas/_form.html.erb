<%= form_for @idea do |f| %>
  <div class="form-group row">
    <%= f.label :title,  class: "col-sm-2 col-form-label"   %>
    <div class="col-sm-8">
      <%= f.text_field :title, class: "form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :caption, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-8">
      <%= f.text_area :caption, class: "form-control", rows: "5" %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :image, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-8">
      <%= f.file_field :image %>
    </div>
  </div>

  <br>
  <%= f.submit 'Add idea', class: "btn btn-primary" %>


<% end %>
